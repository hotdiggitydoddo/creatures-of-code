@model JotAThought.Web.Models.CreatePostViewModel

@{
    ViewBag.Title = "Create";
}

<div class="container" style="max-width: 60%; background-color: #120E38; border: 1px solid gray; border-radius: 15px;">
    <h2>Create a Post</h2>
    @using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { @class = "form-signin", @style = "max-width: 90%;" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label>Title</label>
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Title" })
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="form-group">
            <label>Content</label>
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @rows = "12", @placeholder = "Content" })
            @Html.ValidationMessageFor(model => model.Content)
        </div>
        <input type="hidden" id="Author" name="Author" value="@WebSecurity.CurrentUserName" />
        <button type="submit" class="btn btn-success">Submit</button>
    }

</div>



@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
}
